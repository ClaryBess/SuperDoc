<mapper namespace="com.example.test.mapper.UserDao">

    <sql id="table">User</sql>

    <resultMap id="UserResultMap" type="com.example.test.model.User">
        <result property="UserID" column="UserID"/>
        <result property="UserName" column="UserName"/>
        <result property="Password" column="Password"/>
        <result property="Email" column="Email"/>
        <result property="Gender" column="Gender"/>
        <result property="Birthday" column="Birthday"/>
        <result property="ProfileUrl" column="ProfileUrl"/>
    </resultMap>
    <select id="getAll" resultMap="UserResultMap">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>


    <select id="getUserById" resultType="com.example.test.model.User">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        UserID = #{UserID}
    </select>

    <insert id="newp" parameterType="com.example.test.model.User">
        INSERT INTO
        <include refid="table"/>
        (UserName,Password,Email,Gender,Birthday,ProfileUrl)
        VALUES
        (#{UserName},#{Password},#{Email},#{Gender},#{Birthday},#{ProfileUrl})
    </insert>

    <update id="update" parameterType="com.example.test.model.User">
        UPDATE
        <include refid="table"/>
        SET
        <!--<if test="name != null">name = #{name}</if>-->
        Password = #{Password},Gender = #{Gender},Birthday = #{Birthday},ProfileUrl = #{ProfileUrl}
        WHERE
        UserID = #{UserID}
    </update>

    <delete id="delete" parameterType="com.example.test.model.User">
        DELETE FROM
        <include refid="table"/>
        WHERE
        UserID = #{UserID}
    </delete>

</mapper>